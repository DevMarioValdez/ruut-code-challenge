<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_light"
    android:padding="@dimen/s_margin">

    <ImageView
        android:id="@+id/stock_collection_image_view"
        android:layout_width="@dimen/xl_icon_size"
        android:layout_height="@dimen/xl_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icv_logo" />

    <TextView
        android:id="@+id/stock_collection_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/xl_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/stock_collection_image_view"
        app:layout_constraintEnd_toStartOf="@+id/arrow_down_image_view"
        app:layout_constraintStart_toEndOf="@+id/stock_collection_image_view"
        app:layout_constraintTop_toTopOf="@+id/stock_collection_image_view"
        tools:text="United Kingdom" />

    <ImageView
        android:id="@+id/arrow_down_image_view"
        android:layout_width="@dimen/default_icon_size"
        android:layout_height="@dimen/default_icon_size"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icv_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
